<div class="grid_5 alpha">
  [% IF text %]
    <blockquote>[% text %]</blockquote>
  [% END %]
  <p><a href="[% sourceUrl %]">[% title %]</a></p>
  [% FOREACH resource IN resources %]
      <p class="details">Accessed: <abbr class="timeago" title="[% resource.date_iso8601 %]">[% resource.date_full %]</abbr>.</p>
      <p class="clearfix"><img src="/_etc/resources/cut/[% resource.title %]-[% resource.rnd %]-0_0-fw-220-2-0-0.[% resource.ext %]" alt="[% authorSurname %]: [% bookTitle %] - book cover" class="thumbnail"></p>
  [% END %]
  <aside id="versions" class="meta">
    <p>Version <span class="version-source">[% version %]</span> (<abbr class="timeago" title="[% date_iso8601 %]">[% date_full %]</abbr>)</p>
  </aside>
</div>
<div class="grid_5 prefix_1 suffix_1 omega">
  <div class="apparatus">
    <div id="tags">
      <!--#include virtual="../../_etc/cache/tags--tags-tags=[% tagsUrl %].html" -->
    </div>
    <div id="notes" class="grid_5 alpha omega">
      <!--#include virtual="../../_etc/cache/notes--list-tags=[% tagsUrl %]&exclude=[% p %].html" -->
    </div>
  </div>
</div>